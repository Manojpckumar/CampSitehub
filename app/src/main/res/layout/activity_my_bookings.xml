<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"

    android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".Bookings.MyBookings">
    <com.example.campsitehub.CustomViews.CustomMainHeading
        android:layout_width="match_parent"
        android:textSize="18sp"
        android:background="#1ea5ff"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="ALL BOOKINGS"
        android:layout_height="50dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:padding="10dp"
        android:id="@+id/rcv_mybooking" android:layout_width="match_parent" android:layout_height="match_parent"/>

</LinearLayout>